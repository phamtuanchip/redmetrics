<% content_for :header_tags do %>
  <style>
    table.list thead th {white-space:normal;}
  </style>
<% end %>

<h1><%= l('cmi.label_CMI') %></h1>
<h2><%= l('cmi.label_metrics') %></h2>

<% form_remote_tag(:url => {}, :update => 'content') do %>
  <%= l('cmi.label_filter_by') %>: <%= select_tag(:selected_project_group, options_for_select([nil] + @groups, params[:selected_project_group]),
                                                          :onchange => "this.form.onsubmit();",
                                                          :style => 'width: 200px',
                                                          :id => nil) %></p>

<div id="cmiplugin" name="cmiplugin">
  <table class="list issues">
    <thead>
      <tr>
        <th rowspan="1"><%= l('cmi.label_name') %></th>
        <th colspan="1"><%= l('cmi.label_identifier') %></th>
        <th colspan="1"><%= l('cmi.label_coordinator') %></th>
        <th colspan="1"><%= l('cmi.label_expedient') %></th>
        <th colspan="1"><%= l('cmi.label_typology') %></th>
        <th colspan="1"><%= l('cmi.label_observations_cmi') %></th>
        <th colspan="1"><%= l('cmi.label_stages_cmi') %></th>
        <th colspan="1"><%= l('cmi.label_metrics') %></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <%= render :partial => 'project', :locals => { :project => project, :last_report => @last_report } %>
      <% end %>
    </tbody>
  </table>
</div>
<%end%>
